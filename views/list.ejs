<%- include('header'); -%>

    <div class="todo-container">
      <!-- Smaller, styled heading -->
      <h1 class="day-heading"><%= listTitle %></h1>

      <!-- Input + submit button -->
          <form action="/" method="POST" class="todo-form">
          <input type="text" name="newItem" placeholder="Whatâ€™s next?" autocomplete="off" required />
          <input type="hidden" name="list" value="<%= listTitle %>" />
          <button type="submit" class="add-btn">+</button>
          </form>

      <!-- Dynamic list with checkboxes -->
      <ul class="todo-list">
        <% for (let i = 0; i < newListItems.length; i++) { %>
          <li>
            <label class="checkbox-container">
              <input type="checkbox" />
              <span class="checkmark"></span>
              <span class="item-text"><%= newListItems[i] %></span>
            </label>
          </li>
        <% } %>
      </ul>
    </div>

<%- include('footer'); -%>    


